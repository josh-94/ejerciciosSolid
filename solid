/// Ejercicio 3: LSP

class Ave {
    protected String nombre;
    protected String alas;
    protected String pico;
}

class AveVoladora extends Ave {
    public void volar() {
        //Volar
    }
}

class AveNoVoladora extends Ave {
    public void caminar() {
        //Camina
    }
}

public static void main(String[] args) {
    private AveNoVoladora pinguino;
    pinguino.caminar();
}

/// Ejericio 4: ISP

interface Vehiculo {
    void arrancar();
    void detener();

    interface Aeronave {
        void volar();
    }

    interface Embarcacion {
        void navegar();
    }

    interface Automovil {
        void conducir();
    }

    class Camion implements Vehiculo, Automovil {
        void arrancar();
        void detener();
        void conducir();
    }

    class Crucero implements Vehiculo, Embarcacion {
        void arrancar();
        void detener();
        void navegar();
    }

    class AvionBoing737 implements Vehiculo, Aeronave {
        void arrancar();
        void detener();
        void volar();
    }

/// Ejercicio 5: DIP

interface Generator {
    public void crear();
}

class PDFGenerator extends Generator{
    public void crear() {
        // crear pdf
    }
}

class WordGenerator extends Generator{
    public void crear() {
        // crear Word
    }
}

class ExcelGenerator extends Generator{
    public void crear() {
        // crear Excel
    }
}

class ReporteService {
    private Generator generator;

    public ReporteService (Generator generator) {
        this.generator = generator;
    }

    public void generar();
     generator.crear();
}
